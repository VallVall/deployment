{
  "name": "deployment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "prepare": "husky install",
    "check": "prettier --check src/**/*.js src/**/*.test.js",
    "format": "prettier --write src/**/*.js src/**/*.test.js",
    "lint": "eslint src/**/*.js --max-warnings=0",
    "build": "webpack-cli build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VallVall/deployment.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/VallVall/deployment/issues"
  },
  "homepage": "https://github.com/VallVall/deployment#readme",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "2.8.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules",
      "index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "dependencies": {
    "firebase-tools": "^11.20.0"
  }
}
